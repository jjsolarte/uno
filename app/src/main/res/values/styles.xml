<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/background_shazam</item>
        <item name="colorPrimaryDark">@color/background_shazam_dark</item>
        <item name="colorAccent">@color/accent</item>
    </style>

    <style name="ThemeUno" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- Shazam theme. -->
    <style name="AppShazam" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/background_shazam</item>
        <item name="colorAccent">@color/accent</item>
        <item name="android:textColorPrimary">@color/secondary_text</item>
    </style>

    <style name="ButtonStyle" parent="Theme.AppCompat.Light">
        <item name="colorControlNormal">@color/background_shazam_dark</item>
        <item name="colorButtonNormal">@color/background_shazam_dark</item>
        <item name="colorControlHighlight">@color/background_shazam</item>
        <item name="android:textColorPrimary">@android:color/white</item>
    </style>
</resources>
